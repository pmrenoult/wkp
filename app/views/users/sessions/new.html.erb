<h2>Log in</h2>

<%= form_for(resource, :html => {:class => "form-horizontal"}, as: resource_name, url: session_path(resource_name)) do |f| %>
 
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "XXX@YYY.com" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.label :remember_me, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= f.check_box :remember_me %>
      </div>
    </div>
  <% end -%>

<!--   <div class="actions">
    <%= f.submit "Log in" %>
  </div>
 -->

    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Log In", class: "btn btn-primary" %>
    </div>
  </div>



<% end %>

<div class="col-sm-offset-2 col-sm-10">
<%= render "devise/shared/links" %>
</div>


