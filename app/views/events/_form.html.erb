<%= form_for @event, :html => {:class => "form-horizontal"} do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :tag_list, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_area :tag_list, class: "form-control", placeholder: "tag list (separated by commas)" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", placeholder: "Description" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Choisir une catÃ©gorie", class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.file_field :image, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <label>Date range</label>
    </div>
    <div class="col-sm-6">

      <div class="input-daterange input-group">
        <%= f.text_field :date_begin, class: "input-md form-control" %>
        <span class="input-group-addon">to</span>
        <%= f.text_field :date_end, class: "input-md form-control" %>
      </div>
    </div>
    <div class="col-sm-4">
    </div>
  </div>

  <div class="form-group">
    <%= f.label :time_begin, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.time_select :time_begin, class: "datepicker" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :time_end, class: "col-sm-2 control-label"%>
    <div class="col-sm-10">
      <%= f.time_select :time_end, class: "datepicker" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>

<% end %>





<script type="text/javascript">
  $(document).ready(function(){
    $('.input-daterange').datepicker(
{
     format: "yyyy-mm-dd",
    autoclose: true,
    todayHighlight: true
}
      );
  });
</script>


