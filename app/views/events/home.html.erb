<div class="jumbotron center">
    <h1>Welcome to WKP</h1>
    <br/>
     <% if user_signed_in? %>
      <%= link_to "All events", events_path, class: "btn btn-default btn-md" %>
      <%= link_to "New Event", new_event_path, class: "btn btn-primary btn-md" %>
     <% else %>
       <p>
         <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-md" %>
         <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-md" %>
       </p>
  <% end %>  
</div>
</br>
<%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
<div class="row">
  <div class = "col-md-3">
  <%= f.select(
    :with_category_id,
    @filterrific.select_options[:with_category_id],
    { include_blank: 'Toutes les catÃ©gories' }, { :class => 'form-control' }
  ) %>
  </div>
  <div class = "col-md-3">
      <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], {}, { :class => 'form-control' }) %>
  </div>
  <div class = "col-md-4">
    <div class="input-group">
      <%= f.text_field(
        :search_query,
        # class: 'filterrific-periodically-observed form-control'
        class: 'form-control'
      ) %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></span>
    </div>
  </div>
  <div class = "col-md-1">
    <%= link_to(
      'Reset filters',
      reset_filterrific_url, class: "btn btn-default"
    ) %>    
  </div>
  <div class = "col-md-1">
    <%= f.submit 'Filter', class: "btn btn-primary" %>
  </div>
</div>
</br>    
<div>
  <%# add an automated spinner to your form when the list is refreshed %>
  <%= render_filterrific_spinner %>
<% end %>
</div>
</br>
<%= render(
  partial: 'events/list',
  locals: { events: @events }
) %>


</br>

